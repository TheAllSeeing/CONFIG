\begin_body

\begin_layout Title
Activation Functions
\end_layout

\begin_layout Section
Sigmoid
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\sigma\left(x\right)=\frac{e^{x}}{e^{x}+1}=\frac{1}{1+e^{-x}}
\]

\end_inset


\end_layout

\begin_layout Standard
This function is chosen in particular since
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\lim_{x\to\infty}\sigma\left(x\right)=\frac{e^{x}}{e^{x}}=1
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\lim_{x\to-\infty}\sigma\left(x\right)=\frac{0}{0+1}=0
\]

\end_inset


\end_layout

\begin_layout Standard
and 
\begin_inset Formula $\sigma'\left(x\right)=\frac{e^{2x}}{\left(e^{x}+1\right)^{2}}$
\end_inset

 which is always positive.
 This gives the function an S like shape:
\end_layout

\begin_layout Section
ReLU
\end_layout

\begin_layout Subsection
ReLU
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\text{ReLU}\left(x\right)=\max\left(0,x\right)
\]

\end_inset


\end_layout

\begin_layout Subsection
LeakyReLU
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\text{LeakyReLU}\left(x\right)=\max\left(0,x\right)+\min\left(0.01x,0\right)
\]

\end_inset


\end_layout

\begin_layout Subsection
PReLU
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\text{PReLU}\left(x\right)=\max\left(0,x\right)+\min\left(ax,0\right)
\]

\end_inset


\end_layout

\begin_layout Subsection
ELU
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\text{ELU}\left(x\right)=\max\left(0,x\right)+\min\left(e^{x}-1,0\right)
\]

\end_inset


\end_layout

\begin_layout Subsection
SELU
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\text{SELU}\left(x\right)=\lambda\max\left(0,x\right)+\alpha\min\left(e^{x}-1,0\right)
\]

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\lambda=1.0507,\alpha=1.7580
\]

\end_inset


\end_layout

\begin_layout Section
Tanh
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\tanh\left(x\right)
\]

\end_inset


\end_layout

\begin_layout Section
SoftMax
\end_layout

\begin_layout Standard
\begin_inset Formula 
\[
\text{softmax}\left(\mathbf{x}\right)_{i}=\frac{e^{x_{i}}}{\sum_{j=1}^{K}e^{x_{j}}}
\]

\end_inset


\end_layout

\begin_layout Standard
Where 
\begin_inset Formula $\mathbf{x}\in\mathbb{R}^{K}$
\end_inset

.
\end_layout

